interface Item {
  /** El nombre o título del artículo. */
  name: string;
  
  /** La moneda y el monto para una transacción financiera, como un saldo o pago pendiente. */
  unitAmount: Money;
  
  /** La moneda y el monto para una transacción financiera, como un saldo o pago pendiente. */
  tax?: Money; // "?" indica que esta propiedad es opcional
  
  /** La cantidad del artículo. Debe ser un número entero. */
  quantity: string;
  
  /** La descripción detallada del artículo. */
  description?: string; // Opcional
  
  /** El número de referencia del artículo (SKU). */
  sku?: string; // Opcional
  
  /** La URL al artículo que se está comprando. Visible para el comprador y utilizado en experiencias de compra. */
  url?: string; // Opcional
  
  /** El tipo de categoría del artículo. */
  category?: ItemCategory; // Opcional
  
  /** La URL de la imagen del artículo. Se aplican restricciones de tipo de archivo y tamaño. Una imagen que viole estas restricciones no será aceptada. */
  imageUrl?: string; // Opcional
  
  /** El Código Universal de Producto (UPC) del artículo. */
  upc?: UniversalProductCode; // Opcional
}


